<h1>New Zoo</h1>

<%= error_messages_for :zoo %>

<% form(zoos_create_url, :class => "new_zoo", :id => "new_zoo") do %>
  <p>
    <b>Name</b><br />
    <%= :zoo.text_field :name %>
  </p>
  <p>
    <b>Description</b><br />
    <%= :zoo.text_area :description %>
  </p>
  <p>
    <b>Password</b><br />
    <%= :zoo.password_field :password %>
  </p>
  <p>
    <%= submit_tag("Create") %>
  </p>
<% end %>

<%= link_to("Back", zoos_index_url) %>
