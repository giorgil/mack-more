<h1>Edit Zoo</h1>

<%= error_messages_for :zoo %>

<% form(zoos_update_url(:id => @zoo), :class => "edit_zoo", :id => "edit_zoo", :method => :put) do %>
  <p>
    <b>Name</b><br />
    <%= :zoo.text_field :name %>
  </p>
  <p>
    <b>Description</b><br />
    <%= :zoo.text_area :description %>
  </p>
  <p>
    <b>Password</b><br />
    <%= :zoo.password_field :password %>
  </p>
  <p>
    <%= submit_button("Update") %>
  </p>
<% end %>

<%= link_to("Back", zoos_index_url) %>
