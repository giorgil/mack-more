<h1>Edit Zoo</h1>

<%= error_messages_for :zoo %>

<% form(zoos_update_url(:id => @zoo), :class => "edit_zoo", :id => "edit_zoo", :method => :put) do %>
  <p>
    <b>Name</b><br />
    <%= model_text_field(@zoo, :name) %>
  </p>
  <p>
    <b>Description</b><br />
    <%= model_textarea(@zoo, :description) %>
  </p>
  <p>
    <%= submit_tag("Update") %>
  </p>
<% end %>

<%= link_to("Back", zoos_index_url) %>
